generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                Int       @id @default(autoincrement())
  username          String    @unique @db.VarChar(255)
  password          String
  first_name        String
  last_name         String
  dp                String?
  posts             Post[]    @relation("author")
  follwers          User[]    @relation("user_followers")
  following         User[]    @relation("user_followers")
  sent_messages     Message[] @relation("sent_by")
  received_messages Message[] @relation("received_by")
  liked_posts       Post[]    @relation("user_liked_posts")
  liked_comments    Comment[] @relation("user_liked_comments")
  liked_replies     Reply[]   @relation("user_liked_replies")
  disliked_posts    Post[]    @relation("user_disliked_posts")
  disliked_comments Comment[] @relation("user_disliked_comments")
  disliked_replies  Reply[]   @relation("user_disliked_replies")
  comments          Comment[] @relation("author")
  replies           Reply[]   @relation("author")
}

model Post {
  id        Int       @id @default(autoincrement())
  content   String
  img_url   String?
  timestamp DateTime  @default(now())
  user      User      @relation("author", references: [id], fields: [user_id])
  user_id   Int
  comments  Comment[]
  likes     User[]    @relation("user_liked_posts")
  dislikes  User[]    @relation("user_disliked_posts")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  timestamp DateTime @default(now())
  post      Post     @relation(references: [id], fields: [post_id])
  post_id   Int
  user      User     @relation("author", references: [id], fields: [user_id])
  user_id   Int
  replies   Reply[]
  likes     User[]   @relation("user_liked_comments")
  dislikes  User[]   @relation("user_disliked_comments")
}

model Reply {
  id         Int      @id @default(autoincrement())
  content    String
  timestamp  DateTime @default(now())
  comment    Comment  @relation(references: [id], fields: [comment_id])
  comment_id Int
  user       User     @relation("author", references: [id], fields: [user_id])
  user_id    Int
  likes      User[]   @relation("user_liked_replies")
  dislikes   User[]   @relation("user_disliked_replies")
}

model Message {
  id          Int      @id @default(autoincrement())
  content     String
  timestamp   DateTime @default(now())
  sender      User     @relation("sent_by", references: [id], fields: [sender_id])
  sender_id   Int
  receiver    User     @relation("received_by", references: [id], fields: [receiver_id])
  receiver_id Int
}
